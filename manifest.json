{
    "description": "Tečaj i kalkulator valuta",
    "manifest_version": 2,
    "name": "Tecaj",
    "version": "6.0",
    "homepage_url": "http://www.antoniob.com/hr/tecaj-ekstenzija.html",
    "icons": {
        "48": "icons/tecaj-48.png"
    },

    "permissions": [
        "activeTab",
        "http://www.hnb.hr/"
    ],

    "browser_action": {
        "default_icon": "icons/tecaj-32.png",
        "default_title": "Tečaj",
        "default_popup": "popup/tecaj.html"
    },

    "content_scripts": [{
        "js": ["content_scripts/tecaj.js"]
    }],


    "web_accessible_resources": [
        "images/tecaj.jpg"
    ]

}